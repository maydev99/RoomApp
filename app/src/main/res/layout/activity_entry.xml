<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryActivity">

    <EditText
        android:id="@+id/bNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textCapWords"
        android:hint="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bAgeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Age"
        app:layout_constraintEnd_toEndOf="@+id/bNameText"
        app:layout_constraintStart_toStartOf="@+id/bNameText"
        app:layout_constraintTop_toBottomOf="@+id/bNameText" />

    <Button
        android:id="@+id/bSaveButton"
        android:layout_width="212dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:text="Save"
        android:backgroundTint="@android:color/holo_orange_light"
        app:layout_constraintEnd_toEndOf="@+id/bAgeText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/bAgeText"
        app:layout_constraintTop_toBottomOf="@+id/bAgeText" />
</androidx.constraintlayout.widget.ConstraintLayout>